{
    "name": "dashboard-template",
    "version": "1.0.0",
    "type": "module",
    "main": "./src/js/app.js",
    "repository": "git@github.com:douglasmtss/dashboard-template.git",
    "author": "douglasmtss <douglasmatosdev@gmail.com>",
    "license": "MIT",
    "scripts": {
        "start": "browser-sync start --config browser-sync-config.cjs",
        "start:silent": "browser-sync start --config browser-sync-config.cjs --no-open --logLevel silent",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "lint:css": "stylelint \"**/*.css\"",
        "lint:css:fix": "stylelint \"**/*.css\" --fix",
        "format": "prettier --write \"**/*.{js,json,css,html,md}\"",
        "format:check": "prettier --check \"**/*.{js,json,css,html,md}\"",
        "check": "npm run lint && npm run lint:css && npm run format:check"
    },
    "devDependencies": {
        "@eslint/js": "^10.0.1",
        "@eslint/json": "^1.0.1",
        "browser-sync": "^3.0.4",
        "eslint": "^10.0.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.5",
        "globals": "^17.3.0",
        "prettier": "^3.8.1",
        "stylelint": "^17.3.0",
        "stylelint-config-standard": "^40.0.0",
        "stylelint-prettier": "^5.0.3"
    }
}
